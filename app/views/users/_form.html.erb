<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> сохранение пользователя прервано:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Имя %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :Пароль %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :Повторите_пароль %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit "Добавить пользователя" %>
  </div>
<% end %>
