<p id="notice"><%= notice %></p>

<h1>Listing Sotrs</h1>

<%= link_to 'New Sotr', new_sotr_path %> |
<%= link_to 'Главная страница', controller: 'home_page' %>

<table>
  <thead>
    <tr>
      <th>S fam</th>
      <th>S name</th>
      <th>S otch</th>
      <th>S date</th>
      <th>Dlzh</th>
      <th>S photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sotrs.each do |sotr| %>
      <tr>
        <td><%= sotr.s_fam %></td>
        <td><%= sotr.s_name %></td>
        <td><%= sotr.s_otch %></td>
        <td><%= sotr.s_date %></td>
        <td><%= sotr.dlzh.d_name %></td>
        <td><%= sotr.s_photo %></td>
        <td><%= link_to 'Show', sotr %></td>
        <td><%= link_to 'Edit', edit_sotr_path(sotr) %></td>
        <td><%= link_to 'Destroy', sotr, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>