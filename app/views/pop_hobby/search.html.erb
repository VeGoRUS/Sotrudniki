<h1>Отчет популярность хобби</h1>
<%= link_to 'Главная страница', controller: 'home_page' %><br><br>

<%= form_tag("search", method: "get") do %>
  <%= label_tag(:q, "Поиск id:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Искать") %>  <%= link_to 'Сбросить', controller: 'pop_hobby' %>
<% end %>

<table border="1">
	<th>Код</th>
	<th>Хобби</th>
	<th>Число увлеченных</th>
		<%= Hobby.where("id = ?", params[:q]).find_each do |hobby| %>
			<tr>
				<td><%= hobby.id %></td>
				<td><%= hobby.h_name %></td>
				<td><%= HobbySotr.where("hobby_id = ?", params[:q]).count %></td>
			</tr>
		<% end %>