<p id="notice"><%= notice %></p>

<h1>Справочник хобби</h1>

<%= link_to 'Новое хобби', new_hobby_path %> |
<%= link_to 'Главная страница', controller: 'home_page' %>



<table>
  <thead>
    <tr>
      <th>Название хобби</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hobbies.each do |hobby| %>
      <tr>
        <td><%= hobby.h_name %></td>
        <td><%= link_to 'Показать', hobby %></td>
        <td><%= link_to 'Изменить', edit_hobby_path(hobby) %></td>
        <td><%= link_to 'Удалить', hobby, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>